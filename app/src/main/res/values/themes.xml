<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/amarillo_500</item>
        <item name="android:navigationBarColor">@color/amarillo_500</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/amarillo_300</item>
        <item name="colorPrimaryVariant">@color/amarillo_500</item>
        <item name="colorSecondary">@color/gris_300</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

</resources>