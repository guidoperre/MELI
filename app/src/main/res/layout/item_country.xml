<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <CheckBox
            android:id="@+id/cb_country"
            style="@style/MyCircleCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gris_700"
            android:clickable="false"
            android:focusable="false"
            android:text=" "
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:textColor="@color/gris_900"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_country_icon"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:src="@mipmap/ic_argentina_foreground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_country"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/bandera_pais" />

        <TextView
            android:id="@+id/tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/quicksand_regular"
            android:text="Argentina"
            android:textColor="@color/gris_900"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_country_icon"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>